{
  "name": "retail-promo-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -k \"npm:dev:*\"",
    "dev:web": "npm --workspace apps/web run dev",
    "dev:api": "npm --workspace apps/api run dev",
    "build": "npm -w apps/web run build && npm -w apps/api run build",
    "db:push": "npm -w packages/db run db:push",
    "db:studio": "npm -w packages/db run db:studio"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  }
}
